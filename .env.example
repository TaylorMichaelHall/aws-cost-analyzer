# AWS Cost Analysis Suite Configuration
# Copy this file to .env and customize for your environment

# AWS Configuration
AWS_PROFILE=default
AWS_REGION=us-east-1

# Analysis Configuration  
DEFAULT_MONTHS_BACK=3
EXCLUDE_TODAY=true

# Anomaly Detection Sensitivity (higher = more sensitive)
ANOMALY_THRESHOLD=2.5

# Monthly Billing Pattern Detection
MONTHLY_BILLING_THRESHOLD=2.0

# Output Configuration
OUTPUT_DIR=outputs
DATA_DIR=data
VISUALIZATION_DPI=300

# Cost Thresholds for Analysis
MIN_SERVICE_COST_FOR_ANALYSIS=1.0
MIN_SERVICE_COST_FOR_TRENDING=10.0

# Forecasting Configuration
FORECAST_CONFIDENCE_LEVEL=0.95